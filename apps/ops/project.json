{
  "name": "ops",
  "root": "apps/ops",
  "sourceRoot": "apps/ops/src",
  "projectType": "application",
  "tags": ["type:app"],
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/ops",
        "command": "vite --config vite.config.ts"
      },
      "configurations": {
        "standalone": {
          "command": "cross-env VITE_STANDALONE=true vite --config vite.config.ts"
        }
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/apps/ops"],
      "options": {
        "cwd": "apps/ops",
        "command": "vite build --config vite.config.ts"
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/ops",
        "command": "vite preview --config vite.config.ts"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint apps/ops"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --config vitest.config.ts"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p apps/ops/tsconfig.json --noEmit"
      }
    }
  }
}
