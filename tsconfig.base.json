{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["libs/shared/*/src/index.ts"],
      "@shared/config": ["libs/shared/config/src/index.ts"],
      "@shared/styles": ["libs/shared/styles/src/index.ts"],
      "@shared/styles/*": ["libs/shared/styles/src/*"],
      "@shared/assets/*": ["libs/shared/assets/src/*"],
      "@shared/store": ["libs/shared/store/src/index.ts"],
      "@shared/api-client": ["libs/shared/api-client/src/index.ts"],
      "@shared/auth": ["libs/shared/auth/src/index.ts"],
      "@shared/ui": ["libs/shared/ui/src/index.ts"],
      "@shared/ui/styles": ["libs/shared/ui/src/styles.ts"],
      "@shared/contracts": ["libs/shared/contracts/src/index.ts"],
      "@shared/observability": ["libs/shared/observability/src/index.ts"],
      "@shared/permissions": ["libs/shared/permissions/src/index.ts"],
      "@shared/http": ["libs/shared/http/src/index.ts"],
      "@shared/mocks": ["libs/shared/mocks/src/index.ts"]
    },
    "types": ["vite/client"]
  },
  "include": ["apps/**/*", "libs/**/*", "tools/**/*"]
}
